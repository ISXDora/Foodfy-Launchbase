{% extends "layoutAdmin.njk" %}
{% block content %}
    <main class="main-content">
        <div class="main-text">
            <h1>Gerenciar receitas</h1>
        </div>
    </main>
    <section class="recipes-box">
        
        <div class="recipes">
            {% for item in recipes %}
            <div class="recipe-content">
                <img src="{{item.image}}">
                <div class="recipe-content-text">
                    <h3>{{item.title}}</h3>
                    <p>por {{item.chef_name}}</p>
                    <a href="/admin/recipes/{{item.id}}">Visualizar</a>
                </div>
            </div>
            {% endfor %}
        </div>
        
        </section>
        
{% endblock %}