{% extends "layoutAdmin.njk" %}
{% block content %}
<main class="container main-content">
        <div class="main-text-form">
            <h1>Gerenciando chefs</h1>
        </div>
</main>
<section class="container content-box">
        <div class="chefs">
            {%for chef in chefs%}
            <div class="content-chef">
                <img src="{{chef.avatar_url}}">
                <div>
                <h3>{{chef.name}}</h3>
                <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                </div>
            </div>
            {%endfor%}
        </div>
</section>
{% endblock %}