<div class="items">
    <div class="item">
        <div>Nome</div>
        <div>
            <input
                type="text"
                name="name"
                placeholder="Nome do chef"
                value="{{chef.name}}"
            />
        </div>
    </div>

    <div class="item">
        <div>Avatar</div>
            
        <div id="photo-chef-upload">
            
                <input
                    id="photo-input-chef"
                    type="file"
                    accept="image/*"
                    name="avatar"
                    onChange="PhotoUploadChef.handleFileInput(event)"
                >
            <p>Enviar Avatar</p>
        </div>
    </div>
</div>