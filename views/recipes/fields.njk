<div class="items">
    <div class="item">
        <div>Imagem da receita</div>
        <div>
            <input
                type="url"
                name="recipe_image"
                placeholder="http://"
                value="{{recipe.recipe_image}}"
            />
        </div>
    </div>

    <div class="item">
        <div>Título</div>
        <div>
            <input
                type="text"
                name="recipe_title"
                placeholder="Título da receita"
                value="{{recipe.recipe_title}}"
            />
        </div>
    </div>

    <div class="item">
        <div>Chef</div>
        <div>
            <input
                type="text"
                name="recipe_author"
                placeholder="Nome do chef"
                value="{{recipe.recipe_author}}"
            />
        </div>
    </div>

    <div class="item">
        <div id="ingredients">Ingredientes
        {% for item in recipe.ingredients%}
        <div class="ingredient">
            <input
                type="text"
                name="ingredients[]"
                placeholder="Insira um ingrendiente de cada vez"
                value="{{item}}"
                   
            />
        </div>
        {% else %}
        <div class="ingredient">
            <input
                type="text"
                name="ingredients[]"
                placeholder="Insira um ingrendiente de cada vez"
                value=""      
            />
        </div>
        {% endfor%}
        </div>
        <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
    </div>

    <div class="item">
        <div id="preparations">Modo de preparo
        {% for item in recipe.ingredients%}
        <div class="preparation">
            <input
                type="text"
                name="preparations[]"
                placeholder="Insira a forma de preparo passo a passo"
                value="{{item}}"
            />
        </div>
        {% else %}
        <div class="preparation">
            <input
                type="text"
                name="preparations[]"
                placeholder="Insira a forma de preparo passo a passo"
                value=""
            />
        </div>
        {%endfor%}
        </div>
        <button type="button" class="add-preparation">Adicionar novo passo</button>              
    </div>

    <div class="item">
        <div >Informações Adicionais</div>
        <div>
            <textarea
                type="text"
                name="information"
            >{{recipe.information}}
            </textarea>
        </div>
        
    </div>

</div>